{
    "name": "@neoskop/adamant",
    "version": "0.3.0",
    "description": "PouchDB ORM",
    "main": "index.js",
    "repository": "git@github.com:neoskop/adamant.git",
    "author": "Mark Wecke <wecke@neoskop.de>",
    "license": "MIT",
    "private": false,
    "scripts": {
        "test": "NODE_OPTIONS=--experimental-vm-modules jest",
        "coverage": "npm test -- --coverage && coveralls < coverage/lcov.info",
        "prebuild": "npm run coverage",
        "build": "ng-packagr -p src/ng-package.json && tsc",
        "postbuild": "node bin/postbuild.js",
        "publish-next": "npm run build && npm publish dist --tag next",
        "publish-latest-only": "npm run build && npm publish dist",
        "publish-latest": "npm run publish-latest-only && npm dist-tag add `jq '.name' package.json -r`@`jq '.version' package.json -r` next",
        "prettier": "prettier --write 'bin/*.js' 'src/**/*.ts' 'tests/**/*.ts'",
        "prepare": "husky install"
    },
    "devDependencies": {
        "@angular/animations": "13.3.10",
        "@angular/common": "13.3.10",
        "@angular/compiler": "13.3.10",
        "@angular/compiler-cli": "13.3.10",
        "@angular/core": "13.3.10",
        "@angular/platform-browser": "13.3.10",
        "@angular/platform-browser-dynamic": "13.3.10",
        "@angular/platform-server": "13.3.10",
        "@neoskop/injector": "1.3.3",
        "@types/express": "4.17.13",
        "@types/jest": "^27.5.1",
        "@types/node": "17.0.36",
        "@types/pouchdb": "6.4.0",
        "@types/pouchdb-find": "6.3.7",
        "@types/pouchdb-replication": "6.4.4",
        "@types/pouchdb-upsert": "2.2.6",
        "@types/reflect-metadata": "0.1.0",
        "coveralls": "3.1.1",
        "husky": "^8.0.1",
        "injection-js": "2.4.0",
        "jest": "^28.1.0",
        "lint-staged": "13.0.0",
        "ng-packagr": "13.3.1",
        "nyc": "15.1.0",
        "pouchdb": "7.3.0",
        "pouchdb-adapter-memory": "7.3.0",
        "pouchdb-find": "7.3.0",
        "pouchdb-replication": "7.3.0",
        "pouchdb-upsert": "2.2.0",
        "prettier": "2.6.2",
        "reflect-metadata": "0.1.13",
        "rxjs": "7.5.5",
        "ts-jest": "^28.0.3",
        "ts-node": "10.8.0",
        "tsconfig-paths": "4.0.0",
        "tslib": "2.4.0",
        "typescript": "4.6",
        "zone.js": "0.11.5"
    },
    "dependencies": {
        "fast-deep-equal": "3.1.3"
    },
    "nyc": {
        "include": "src/**/*.ts",
        "exclude": [
            "src/**/*.spec.ts",
            "**/test-init.ts"
        ]
    },
    "lint-staged": {
        "*.{js,json,ts,md}": [
            "prettier --write"
        ]
    }
}
